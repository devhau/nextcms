{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": ["./*"]
    },
    "baseUrl": "."
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts",
    "postcss.config.mjs",
    "../../packages/common/src/trpc/context.ts",
    "../../packages/common/src/trpc/root.ts"
  ],
  "exclude": ["node_modules"]
}
